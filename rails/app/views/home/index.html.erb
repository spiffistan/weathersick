<section id="home-container">
  <div id="search-container">
    <form id="search-form">
      <div class="search-part">
        <label>Take me from</label>
        <input name="from" type="text" />
      </div>
      <div class="search-part">
        <label>to somewhere that's</label>
        <select name="weather">
          <option value="sunny">Sunny</option> 
          <option value="warm">Warm</option> 
          <option value="temperate">Temperate</option> 
          <option value="cool">Cool</option> 
          <option value="snowy">Snowy</option> 
        </select>
      </div>
      <div class="search-part">
        <label>from</label>
        <input name="from" type="text" class="datepicker input-medium" value="<%= @date_from %>" />
      </div>
      <div class="search-part">
        <label>to</label>
        <input name="to" type="text" class="datepicker input-medium"value="<%= @date_to %>" />
      </div>
      <input name="location" type="hidden" />
      <button class="btn btn-large btn-primary btn-block" id="search-submit">GO</button>
    </form>
  </div>
  <div id="search-results">
  </div>
  <div id="flights" class="search-results">
  </div>
</section>

